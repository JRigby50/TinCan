<script language='vbscript'>
Option Explicit

Sub MultiFunctions(strType)
	Select Case strType
		Case	"Reset"			location.Reload(True)
		Case	"Quit"			self.close()
	End Select
End Sub


Sub StatusUpdate(strRef)
	If sResult.value = "" Then
		sResult.value = Now() & " | " & strRef
	Else
		sResult.value = sResult.value & vbcrlf & Now() & " | " & strRef
	End If
	sResult.doScroll("down")
End Sub

</script>

<body>

<p>Sample Status Window<br><textarea rows='4' cols='80' name='sResult'></textarea></p>
<p><input type='button' value='Reset' name='bReset' onclick='vbscript:MultiFunctions "Reset"'></p>
<p><input type='button' value='Quit' name='bQuit' onclick='vbscript:MultiFunctions "Quit"'></p>

</body>

